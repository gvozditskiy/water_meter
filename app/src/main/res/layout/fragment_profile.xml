<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gvozditskiy.watermeter.activityNfragments.ProfileFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">

            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RadioGroup
                    android:id="@+id/frag_prof_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <!--<RadioButton-->
                    <!--android:id="@+id/frag_prof_radiobtn1"-->
                    <!--android:layout_width="48dp"-->
                    <!--android:layout_height="48dp"-->
                    <!--android:button="@color/transparent"-->
                    <!--android:background="@drawable/flat_selector"-->
                    <!--android:layout_margin="8dp"-->
                    <!--android:checked="true"/>-->

                    <!--<RadioButton-->
                    <!--android:id="@+id/frag_prof_radiobtn2"-->
                    <!--android:layout_width="48dp"-->
                    <!--android:layout_height="48dp"-->
                    <!--android:layout_margin="8dp"-->
                    <!--android:button="@color/transparent"-->
                    <!--android:background="@drawable/flat_selector" />-->

                    <!--<RadioButton-->
                    <!--android:id="@+id/frag_prof_radiobtn3"-->
                    <!--android:layout_width="48dp"-->
                    <!--android:layout_height="48dp"-->
                    <!--android:layout_margin="8dp"-->
                    <!--android:button="@color/transparent"-->
                    <!--android:background="@drawable/flat_selector" />-->

                    <!--<RadioButton-->
                    <!--android:id="@+id/frag_prof_radiobtn4"-->
                    <!--android:layout_width="48dp"-->
                    <!--android:layout_height="48dp"-->
                    <!--android:layout_margin="8dp"-->
                    <!--android:button="@color/transparent"-->
                    <!--android:background="@drawable/flat_selector"-->
                    <!--/>-->

                </RadioGroup>

            </HorizontalScrollView>

            <ImageButton
                android:id="@+id/frag_prof_editbtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end|center_vertical"
                android:background="@color/transparent"
                android:src="@drawable/ic_edit" />
        </LinearLayout>

        <TextView
            android:id="@+id/frag_prof_flatname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">
            <!--/////счетчики холодной воды-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/frag_prof_recycler_cold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/frag_prof_addCold"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end|center_vertical"
                    app:srcCompat="@drawable/ic_add_cold"
                    android:background="@color/transparent"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="12dp"/>

            </LinearLayout>
            <!--//////////счетчики горячей воды/////-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/frag_prof_recycler_hot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/frag_prof_addHot"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end|center_vertical"
                    app:srcCompat="@drawable/ic_add_hot"
                    android:scaleType="centerCrop"
                    android:background="@color/transparent"
                    android:layout_marginRight="12dp"/>

            </LinearLayout>
        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_person" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/card_textview_marg"
                        android:text="@string/frag_prof_user_caption"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                        tools:text="@string/frag_prof_user_caption" />

                </LinearLayout>


                <View
                    style="@style/Divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/frag_prof_secname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/frag_prof_secname_hint"
                        android:inputType="textCapWords|textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/frag_prof_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/frag_prof_name_hint"
                        android:inputType="textCapWords|textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/frag_prof_otch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/frag_prof_otch_hint"
                        android:inputType="textCapWords|textPersonName" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_address" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/card_textview_marg"
                        android:text="@string/frag_prof_address_caption"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                        tools:text="Адрес" />

                </LinearLayout>


                <View
                    style="@style/Divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/frag_prof_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:entries="@array/streets" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/frag_prof_street_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/frag_prof_street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/frag_prof_street_hint"
                        android:inputType="textCapWords|textPostalAddress" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/frag_prof_building"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/frag_prof_building_hint"
                        android:inputType="textPostalAddress" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/frag_prof_flat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/frag_prof_flat_hint"
                        android:inputType="textPostalAddress|number" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_telephone" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/card_textview_marg"
                        android:layout_weight="1"
                        android:text="@string/frag_prof_tele_caption"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                        tools:text="@string/frag_prof_tele_caption" />

                    <ImageButton
                        android:id="@+id/frag_profile_info"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="right"
                        android:background="@color/transparent"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_info" />
                </LinearLayout>

                <View
                    style="@style/Divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/frag_prof_tele"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/frag_prof_tele_hint"
                        android:inputType="phone" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>


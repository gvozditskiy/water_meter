<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gvozditskiy.watermeter.activityNfragments.EneterIndicFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            >
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:paddingLeft="@dimen/editText_padding"
                android:id="@+id/frag_enter_ind_last_coldwater"
                android:background="@drawable/background_cold_last"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/frag_enter_ind_last_cold"
                app:layout_constraintRight_toLeftOf="@+id/guideline"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:maxLines="1"
                tools:text="53"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/frag_enter_ind_last_hotwater"
                android:background="@drawable/background_hot_last"
                android:paddingLeft="@dimen/editText_padding"
                app:layout_constraintTop_toTopOf="@+id/frag_enter_ind_last_coldwater"
                app:layout_constraintLeft_toLeftOf="@+id/guideline"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                tools:text="29"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <TextView
                android:text="@string/frag_enter_ind_current_cold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frag_enter_ind_last_cold"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/frag_enter_ind_last" />

            <TextView
                android:text="@string/frag_enter_ind_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frag_enter_ind_last"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:text="@string/frag_enter_ind_current_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frag_enter_ind_last_hot"
                app:layout_constraintBottom_toTopOf="@+id/frag_enter_ind_last_hotwater"
                app:layout_constraintTop_toTopOf="@+id/frag_enter_ind_last_cold"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp" />

            <android.support.constraint.Guideline
                android:layout_width="0dp"
                android:layout_height="105dp"
                android:id="@+id/guideline"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="188dp"
                app:layout_constraintGuide_percent="0.5" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="16dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            >
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:paddingLeft="@dimen/editText_padding"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/frag_enter_ind_current_coldwater"
                android:background="@drawable/background_cold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline1"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/frag_enter_ind_current_cold"
                android:maxLines="1"
                tools:text="56"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:paddingLeft="@dimen/editText_padding"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/frag_enter_ind_current_hotwater"
                android:background="@drawable/background_hot"
                android:maxLines="1"
                tools:text="31"
                app:layout_constraintLeft_toLeftOf="@+id/guideline1"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/frag_enter_ind_current_hot"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <TextView
                android:text="@string/frag_enter_ind_current_cold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frag_enter_ind_current_cold"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/frag_enter_ind_current"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp" />

            <TextView
                android:text="@string/frag_enter_ind_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frag_enter_ind_current"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp" />

            <TextView
                android:text="@string/frag_enter_ind_current_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frag_enter_ind_current_hot"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toTopOf="@+id/frag_enter_ind_current_cold" />

            <android.support.constraint.Guideline
                android:layout_width="0dp"
                android:layout_height="358dp"
                android:id="@+id/guideline1"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="188dp"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frag_enter_ind_coldDelta"
                app:layout_constraintRight_toRightOf="@+id/frag_enter_ind_current_coldwater"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/frag_enter_ind_current_coldwater"
                tools:text="+3 м3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frag_enter_ind_hotDelta"
                app:layout_constraintRight_toRightOf="@+id/frag_enter_ind_current_hotwater"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/frag_enter_ind_current_hotwater"
                tools:text="+2 м3"/>

            <View
                android:layout_width="0dp"
                style="@style/Divider"
                app:layout_constraintTop_toBottomOf="@+id/frag_enter_ind_hotDelta"
                android:layout_marginTop="8dp"
                android:id="@+id/view"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_height="1dp" />

            <TextView
                tools:text="Суммарный расход за текущий период 5 м3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frag_enter_ind_summary"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/view"
                android:layout_marginTop="8dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>

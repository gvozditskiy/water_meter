<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!--app:srcCompat="@drawable/ic_nav_indications"-->
    <ImageView

        android:id="@+id/meter_edit_image"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/meter_edit_nametext"
        android:minWidth="48dp"
        android:maxWidth="96dp"
        app:layout_constraintTop_toBottomOf="@+id/meter_edit_image"
        app:layout_constraintLeft_toLeftOf="@+id/meter_edit_image"
        app:layout_constraintRight_toRightOf="@+id/meter_edit_image"
        android:textSize="14sp"
        android:textAlignment="center" />

    <ImageButton
        app:srcCompat="@drawable/ic_del"
        android:background="@color/transparent"
        android:id="@+id/meter_edit_delBtn"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/meter_edit_image"
        android:layout_marginLeft="8dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />
</android.support.constraint.ConstraintLayout>